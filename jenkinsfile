pipeline {
    agent any

    environment {
        NODE_VERSION = '21.1.0'
        NVM_DIR = '/home/markus.buergi1986/.nvm'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/mBuergi86/transfwork_cloud.git', credentialsId: 'todo_app_Jenkins'
            }
        }
        stage('Setup Environment') {
            steps {
                sh 'export NVM_DIR="$NVM_DIR"'
                sh 'curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash'
                sh 'export NVM_DIR=\"$NVM_DIR\" && [ -s \"$NVM_DIR/nvm.sh\" ] && . \"$NVM_DIR/nvm.sh\"'
                sh 'nvm --version'
                sh 'nvm install $NODE_VERSION'
                sh 'nvm use $NODE_VERSION'
                sh 'export PATH="$PATH:/path/to/dotnet"'
            }
        }
        stage('Build'){
            parallel {
                stage('Build Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm install && npm run build'
                        }
                    }
                }
                stage('Build Backend') {
                    steps {
                        dir('backend/todoApi001') {
                            sh 'dotnet build -c Release'
                        }
                    }
                }
            }
        }
    }
}
